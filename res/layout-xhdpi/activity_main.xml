<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/main_activity_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_wordmap_tab"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/activity_title_text_size"
        android:text="@string/title_activity_main"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:typeface="normal"
        tools:context=".MainActivity" />
    
    <LinearLayout
        android:id="@+id/main_activity_search_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_search_bar_height"
        android:paddingBottom="@dimen/margin_h2"
        android:paddingTop="@dimen/margin_h2"
        android:paddingRight="@dimen/margin_h5"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_activity_title"
        android:background="@drawable/bg_search"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/input_bar_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/margin_h1"
            android:paddingBottom="@dimen/margin_h1"
            android:layout_weight="1"
            android:contentDescription="@string/input_bar_img"
            android:src="@drawable/btn_input_en" />

        <EditText
            android:id="@+id/input_bar_editText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:hint="@string/searchbox_hint"
            android:ems="10"
            android:inputType="textAutoCorrect" />
			<!-- <requestFocus /> 
			            android:paddingBottom="@dimen/activity_tab_bar_height"
			            -->
    </LinearLayout>
    
    <ImageView
    		android:id="@+id/main_activity_prompt_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_activity_search_bar"
            android:layout_above="@id/main_activity_tab_bar"
            android:scaleType="fitXY"
            android:contentDescription="@string/activity_main_prompt_img"
            android:src="@drawable/prompt" >
    </ImageView>

    <LinearLayout
        android:id="@+id/main_activity_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_tab_bar_height"
        android:baselineAligned="false"
        android:background="@drawable/bg_wordmap_tab"
        android:layout_alignParentBottom="true" >

        <LinearLayout
	        android:id="@+id/main_activity_tab_search"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical" >
	       <ImageView
	           android:id="@+id/imageview_tabbar_search"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:paddingBottom="@dimen/margin_h2"
       		   android:paddingTop="@dimen/margin_h2"
	           android:layout_gravity="center"
	           android:contentDescription="@string/tab_bar_search"
	           android:src="@drawable/tabbar_search_2x" />
	       <TextView
	           android:id="@+id/textview_tabbar_search"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center"
	           android:text="@string/tab_bar_search" />
	     </LinearLayout>

         <LinearLayout
	        android:id="@+id/main_activity_tab_bar_scenarios"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical" >
	       <ImageView
	           android:id="@+id/imageview_tabbar_scenarios"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:paddingBottom="@dimen/margin_h2"
       		   android:paddingTop="@dimen/margin_h2"
	           android:layout_gravity="center"
	           android:contentDescription="@string/tab_bar_scenarios"
	           android:src="@drawable/tabbar_scenario_2x" />
	       	<TextView
	           android:id="@+id/textview_tabbar_scenarios"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center"
	           android:text="@string/tab_bar_scenarios" />
	     </LinearLayout>

      	<LinearLayout
	        android:id="@+id/main_activity_tab_bar_bookmarks"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical" >
      		<ImageView
		          android:id="@+id/imageview_tabbar_bookmarks"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:paddingBottom="@dimen/margin_h2"
       		      android:paddingTop="@dimen/margin_h2"
		          android:layout_gravity="center"
		          android:contentDescription="@string/tab_bar_bookmarks"
		          android:src="@drawable/tabbar_bookmarks_2x" />
      	    <TextView
		           android:id="@+id/textview_tabbar_bookmarks"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_gravity="center"
		           android:text="@string/tab_bar_bookmarks" />
	     </LinearLayout>

      	<LinearLayout
	        android:id="@+id/main_activity_tab_bar_help"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="vertical" >
      		<ImageView
	          android:id="@+id/imageview_tabbar_help"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:paddingBottom="@dimen/margin_h2"
       		  android:paddingTop="@dimen/margin_h2"
	          android:layout_gravity="center"
	          android:contentDescription="@string/tab_bar_help"
	          android:src="@drawable/tabbar_help_2x" />
          	<TextView
	           android:id="@+id/textview_tabbar_help"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center"
	           android:text="@string/tab_bar_help" />
	   </LinearLayout>
    </LinearLayout>
</RelativeLayout>
