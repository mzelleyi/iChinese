<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_bookmark_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/fragment_bookmark_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/navigationbar_bg_2x"
        android:orientation="horizontal" >
        <TextView
	        android:id="@+id/bookmark_titlebar_textview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:maxLines="1"
	        android:text="@string/tab_bar_bookmark"
	        android:textColor="@color/white_normal"
	        android:textSize="@dimen/title_bar_center_text_size"
	        android:textStyle="bold"
	        android:typeface="normal" />
        <Button
            android:id="@+id/bookmark_titlebar_btn_edit"
            android:layout_width="@dimen/title_bar_side_button_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_h2"
            android:layout_alignParentLeft="true"
            android:text="@string/title_bar_btn_edit"
            android:textColor="@color/white_normal"
            android:textStyle="bold"
            android:textSize="@dimen/title_bar_side_text_size"
            android:background="@drawable/btn_navbar" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_bookmark_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>
</LinearLayout>