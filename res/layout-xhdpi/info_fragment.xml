<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/fragment_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/navigationbar_bg_2x"
        android:orientation="horizontal" >
        <TextView
	        android:id="@+id/fragment_info_title_textview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:maxLines="1"
	        android:text="@string/tab_bar_info"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/title_bar_center_text_size"
	        android:textStyle="bold"
	        android:typeface="normal" />
        <Button
            android:id="@+id/fragment_info_title_button"
            android:layout_width="@dimen/title_bar_side_button_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_h4"
            android:layout_alignParentRight="true"
            android:text="@string/title_bar_help"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="@dimen/title_bar_side_text_size"
            android:background="#00F5FF" />
    </RelativeLayout>

    <WebView
        android:id="@+id/fragment_info_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
   
</LinearLayout>